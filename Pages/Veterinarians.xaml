<Page x:Class="VeterinaryClinic.Pages.Veterinarians"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VeterinaryClinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Ветеринары"
      Background="#CCDCE7">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button x:Name="BackButton"
                    Content="Назад"
                    Margin="0,0,10,0"
                    Padding="10,5"
                    Background="#315655"
                    Foreground="White"
                    BorderThickness="0"
                    Click="BackButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <TextBlock Text="Список ветеринаров" 
                       FontSize="18" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Veterinarians List -->
        <ListView x:Name="VeterinariansListView" 
                  Grid.Row="1" 
                  Margin="0,10,0,0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,0,0,5"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Focusable" Value="False"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#A0A0A0"
                            BorderThickness="1"
                            CornerRadius="5"
                            Background="White"
                            Padding="10">
                        <StackPanel>
                            <TextBlock Text="{Binding lastname}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding name}"
                                       FontSize="12"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding middlename}"
                                       FontSize="12"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding phonenumber, StringFormat='Телефон: {0}'}"
                                       FontSize="12"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding email, StringFormat='Email: {0}'}"
                                       FontSize="12"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>