<Page x:Class="VeterinaryClinic.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VeterinaryClinic.Pages"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="Авторизация"
      Background="#CCDCE7">

    <Page.Resources>
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#3B4350"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="20,0,20,10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PasswordFieldStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#3B4350"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="20,0,20,10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#315655"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="20,10,20,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D6B69"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#294847"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Border BorderBrush="#A0A0A0" 
                BorderThickness="1" 
                CornerRadius="5"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Width="400"
                Background="#CCDCE7">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" Opacity="0.3" BlurRadius="10"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="VetClinic" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="#333333" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,0" 
                           Grid.Row="0"/>

                <TextBlock Text="Добро пожаловать в нашу клинику!" 
                           FontSize="14" 
                           Foreground="#3B4350" 
                           HorizontalAlignment="Center" 
                           Margin="0,5,0,20" 
                           Grid.Row="1"/>

                <TextBlock Text="Логин" 
                           FontSize="14" 
                           Foreground="#3B4350" 
                           HorizontalAlignment="Left" 
                           Margin="20,0,0,5" 
                           Grid.Row="2"/>

                <TextBox Name="txtLogin" 
                         Style="{StaticResource InputFieldStyle}"
                         Grid.Row="3"/>

                <TextBlock Text="Пароль" 
                           FontSize="14" 
                           Foreground="#3B4350" 
                           HorizontalAlignment="Left" 
                           Margin="20,0,0,5" 
                           Grid.Row="4"/>

                <PasswordBox Name="txtPassword" 
                             Style="{StaticResource PasswordFieldStyle}"
                             Grid.Row="5"/>

                <Button Content="Войти" 
                        Style="{StaticResource LoginButtonStyle}"
                        Click="btnLogin_Click" 
                        Grid.Row="6"/>

                <StackPanel Grid.Row="8" Orientation="Vertical" Margin="0,10,0,20">
                    <TextBlock Text="Забыли пароль?" 
                               Foreground="#3B4350" 
                               HorizontalAlignment="Center" 
                               Cursor="Hand" 
                               MouseDown="ForgotPassword_MouseDown"
                               Margin="0,0,0,5"/>

                    <TextBlock Text="Нет аккаунта? Создать" 
                               Foreground="#3B4350" 
                               HorizontalAlignment="Center" 
                               Cursor="Hand"
                               Margin="0,5,0,0"
                               MouseDown="CreateAccount_MouseDown"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
