<Page x:Class="VeterinaryClinic.Pages.Employees"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VeterinaryClinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Сотрудники"
      Background="#CCDCE7">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button x:Name="BackButton"
                    Content="Назад"
                    Margin="0,0,10,0"
                    Padding="10,5"
                    Background="#315655"
                    Foreground="White"
                    BorderThickness="0"
                    Click="BackButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <TextBlock Text="Список сотрудников" 
                       FontSize="18" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>

            <Button x:Name="AddEmployeeButton"
                    Content="Добавить сотрудника"
                    Margin="10,0,0,0"
                    Padding="10,5"
                    Background="#28a745"
                    Foreground="White"
                    BorderThickness="0"
                    Click="AddEmployeeButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

        <ListView x:Name="EmployeesListView" 
                  Grid.Row="1" 
                  Margin="0,10,0,0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,0,0,5"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Focusable" Value="False"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#A0A0A0"
                            BorderThickness="1"
                            CornerRadius="5"
                            Background="White"
                            Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding lastname}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding name}"
                                           FontSize="12"
                                           Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding middlename}"
                                           FontSize="12"
                                           Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding User.role.namerole, StringFormat='Должность: {0}'}"
                                           FontSize="12"
                                           Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding phonenumber, StringFormat='Телефон: {0}'}"
                                           FontSize="12"
                                           Margin="0,5,0,0"/>
                            </StackPanel>

                            <!-- Edit Button -->
                            <Button Grid.Column="1"
                                    Content="Редактировать"
                                    FontSize="12"
                                    Foreground="White"
                                    Background="#007BFF"
                                    Width="100"
                                    Height="30"
                                    Margin="5,0"
                                    Padding="0"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="EditEmployee_Click"
                                    Tag="{Binding id_employee}">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <!-- Delete Button -->
                            <Button Grid.Column="2"
                                    Content="Удалить"
                                    FontSize="12"
                                    Foreground="White"
                                    Background="#DC3545"
                                    Width="80"
                                    Height="30"
                                    Margin="5,0"
                                    Padding="0"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="DeleteEmployee_Click"
                                    Tag="{Binding id_employee}">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>